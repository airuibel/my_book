    "import time as t\n",
    "while True:\n",
    "    start_end = int(input(\"请输入0或1[0开始][1结束]\"))\n",
    "    if not start_end:\n",
    "        start = t.time()\n",
    "    elif start_end:\n",
    "        end = t.time()\n",
    "        print(\"运行了%.2f s\"%(end-start))\n",
    "    else:\n",
    "        print(\"请正确输入，输入0开始\")"
   ]
