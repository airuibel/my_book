   "source": [
    "i = 0\n",
    "def move(n,a,b,c):\n",
    "    global i\n",
    "    if n == 1:\n",
    "        i += 1\n",
    "        print('移动第',i,'次',a,'-->',c)\n",
    "    else:\n",
    "        move(n - 1,a,c,b)\n",
    "        move(1,a,b,c)\n",
    "        move(n - 1,b,a,c)\n",
    "\n",
    "move(3,\"A\",\"B\",\"C\")"
   ]
  }
